    </div>
  </div>
  {% endfor %}
</main>

<script>
  async function postStop(){
    try{
      await fetch("{{ url_for('stop_route') }}", {method:"POST"});
      location.reload();
    }catch(e){ console.log(e); }
  }
  async function testCapture(){
    try{
      // quick single still just to test camera; non-blocking
      await fetch("{{ url_for('preview', sess=(current_session or (sessions[0].name if sessions else '')) ) }}");
    }catch(e){ console.log(e); }
  }

  let pollTimer=null;
  function showProgress(name){
    const wrap = document.getElementById('prog-'+name);
    const bar  = document.getElementById('bar-'+name);
    if(!wrap||!bar) return;
    wrap.classList.add('show');
    if(pollTimer) clearInterval(pollTimer);
    pollTimer = setInterval(async ()=>{
      try{
        const r = await fetch("{{ url_for('jobs') }}");
        const j = await r.json();
        const job = j[name];
        if(!job){ return; }
        bar.style.width = (job.progress||0) + "%";
        if(job.status==='done' || job.status==='error'){
          clearInterval(pollTimer);
          setTimeout(()=>{ wrap.classList.remove('show'); bar.style.width='0%'; location.reload(); }, 400);
        }
      }catch(e){ console.log(e); }
    }, 600);
  }
</script>
"""

# ---------- Main ----------
if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5050)


# ======== Simple Scheduler (adds /schedule page) ========
import threading, time, urllib.request, urllib.parse

_sched_lock = threading.Lock()
_sched_state = {}  # {'start_ts':int,'end_ts':int,'interval':int,'fps':int}
_sched_start_timer = None
_sched_stop_timer  = None

def _sched_http_post(path, data=None, timeout=5):
    try:
        url = f"http://127.0.0.1:5050{path}"
        if data is None: 
            data = {}
        payload = urllib.parse.urlencode(data).encode()
        req = urllib.request.Request(url, data=payload, method="POST")
        urllib.request.urlopen(req, timeout=timeout).read(1)
        return True
    except Exception:
        return False

@app.route('/schedule', methods=['GET','POST'])
def schedule_page():
    global _sched_state, _sched_start_timer, _sched_stop_timer
    msg = ""
    if request.method == 'POST':
        if 'cancel' in request.form:
            with _sched_lock:
                _sched_state.clear()
                if _sched_start_timer: _sched_start_timer.cancel()
                if _sched_stop_timer: _sched_stop_timer.cancel()
                _sched_start_timer = _sched_stop_timer = None
            msg = "Schedule cancelled."
        else:
            start_str = request.form.get("start")
            dur_min   = int(request.form.get("duration", "0") or "0")
            interval  = int(request.form.get("interval", "5") or "5")
            fps       = int(request.form.get("fps", "24") or "24")
            try:
                start_ts = int(time.mktime(time.strptime(start_str, "%Y-%m-%dT%H:%M")))
                end_ts   = start_ts + dur_min*60
                now = int(time.time())
                with _sched_lock:
                    _sched_state = {'start_ts':start_ts,'end_ts':end_ts,'interval':interval,'fps':fps}
                    if _sched_start_timer: _sched_start_timer.cancel()
                    if _sched_stop_timer: _sched_stop_timer.cancel()
                    delay_start = max(0, start_ts-now)
                    delay_stop  = max(0, end_ts-now)
                    _sched_start_timer = threading.Timer(delay_start, lambda: _sched_http_post("/start", {"interval":interval,"fps":fps}))
                    _sched_stop_timer  = threading.Timer(delay_stop,  lambda: _sched_http_post("/stop"))
                    _sched_start_timer.start()
                    _sched_stop_timer.start()
                msg = f"Scheduled from {start_str} for {dur_min} minutes."
            except Exception as e:
                msg = f"Error: {e}"
    with _sched_lock:
        st = dict(_sched_state)
    return f"""<html><head><title>Schedule Timelapse</title>
    <style>
     body { font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif; margin:16px; }
     .card { max-width:560px; margin:auto; border:1px solid #e5e7eb; border-radius:12px; padding:16px; box-shadow:0 1px 4px rgba(0,0,0,.05); }
     label { display:block; margin:10px 0 4px; font-weight:600; }
     input,select,button { width:100%; padding:10px; border-radius:8px; border:1px solid #cbd5e1; }
     .row { display:grid; grid-template-columns:1fr 1fr; gap:12px; }
     .btn { display:inline-block; width:auto; padding:10px 14px; border:none; border-radius:999px; cursor:pointer; margin-right:8px; }
     .primary { background:#2563eb; color:#fff; }
     .danger { background:#ef4444; color:#fff; }
     .muted { color:#334155; font-size:.9rem; margin-top:8px; }
     .topbar a { text-decoration:none; color:#2563eb; }
    </style></head>
    <body>
     <div class=topbar><a href="/">← Back</a></div>
     <div class=card>
      <h2>Schedule Timelapse</h2>
      <form method=post>
        <label>Start time:</label>
        <input type=datetime-local name=start required>
        <div class=row>
          <div><label>Duration (minutes)</label><input type=number name=duration min=1 value=60></div>
          <div><label>Interval (s)</label><input type=number name=interval min=1 value=5></div>
        </div>
        <label>FPS:</label>
        <input type=number name=fps min=1 value=24>
        <p><button class="btn primary" type=submit>Set Schedule</button>
           <button class="btn danger" type=submit name=cancel value=1>Cancel</button></p>
      </form>
      <p class=muted>{msg}</p>
      <p class=muted>Current schedule: {st}</p>
     </div>
    </body></html>"""

# END SCHEDULER BLOCK
