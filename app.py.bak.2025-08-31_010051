        </form>

        <form action="{{ url_for('delete', sess=s.name) }}" method="post" onsubmit="return confirm('Delete {{ s.name }}?')" >
          <button class="btn" type="submit" {% if current_session == s.name %}disabled title="Stop capture first"{% endif %}>🗑️ Delete</button>
        </form>
